{
    "name": "caramelo",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "engines": {
        "node": ">=20"
    },
    "scripts": {
        "dev": "npm run services:up && npm run wait-for-postgres && npm run migration:up && next dev",
        "lint:check": "prettier --check .",
        "lint:fix": "prettier --write .",
        "test": "npm run services:up && concurrently -n next,jest --hide next -k -s command-jest \"next dev\" \"jest --runInBand --verbose\"",
        "test:watch": "jest --watchAll --runInBand",
        "services:up": "docker-compose -f infra/docker/compose.yaml up -d",
        "services:down": "docker-compose -f infra/docker/compose.yaml down",
        "services:stop": "docker-compose -f infra/docker/compose.yaml stop",
        "migration:create": "node-pg-migrate -m infra/database/migrations create",
        "migration:up": "node-pg-migrate -m infra/database/migrations --envPath .env.development up",
        "migration:down": "node-pg-migrate -m infra/database/migrations --envPath .env.development down",
        "wait-for-postgres": "node infra/database/wait-for-postgres.js"
    },
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@heroicons/react": "^2.2.0",
        "@mantine/charts": "^7.14.3",
        "@mantine/code-highlight": "^7.14.3",
        "@mantine/core": "^7.14.3",
        "@mantine/form": "^7.14.3",
        "@mantine/hooks": "^7.14.3",
        "@mantine/modals": "^7.14.3",
        "@mantine/notifications": "^7.14.3",
        "@mantine/nprogress": "^7.14.3",
        "@mantine/spotlight": "^7.14.3",
        "async-retry": "^1.3.3",
        "dotenv": "^16.4.7",
        "dotenv-expand": "^12.0.1",
        "next": "13.5.7",
        "node-pg-migrate": "^6.2.2",
        "pg": "^8.11.3",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "react-imask": "^7.6.1",
        "react-lottie": "^1.2.10",
        "recharts": "^2.14.1"
    },
    "devDependencies": {
        "autoprefixer": "^10.4.20",
        "concurrently": "^8.2.2",
        "jest": "^29.6.2",
        "postcss": "^8.4.49",
        "prettier": "^3.4.2",
        "tailwindcss": "^3.4.16"
    }
}
